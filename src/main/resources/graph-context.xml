<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="graphService" class="abac.spring.data.neo4j.db.EmbeddedGraphService">
        <property name="pathToDb"
                  value="/"/>
                  <!--value="/Users/luanne/projects/graphDbs/flavorwocky/heroku/jun102014graphene/testunit"/>-->
    </bean>


    <bean id="connectionFactory" class="abac.spring.data.neo4j.db.ConnectionFactory" scope="singleton">
        <property name="graphService" ref="graphService"/>
    </bean>

</beans>